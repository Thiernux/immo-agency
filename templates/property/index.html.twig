{% extends('base.html.twig') %}

{% block title %}  Our Properties !  {% endblock %}

{% block body %}
    <div class="jombotron mt-4" style="width:50%; margin:auto;">
        <div class=container>
            {{ form_start(form) }}
            <div class="form-row align-items-end">
                <div class="col">               
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col"> 
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col"> 
                    {{ form_row(form.option) }}
                </div>
                <div class="col"> 
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

	<div class="container text-center mt-4">
		<h1>See all of our Properties !</h1>
		<p>
			Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
    	tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    	quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
    	</p>
        <div class=row>
            {% for property in properties %}
                <div class="col-md 4">
                     {% include('property/_property.html.twig')%}
                </div>
            {% endfor %}
        </div>
        <diva class="pagination">
            {{ knp_pagination_render(properties) }}
        </div>
	</div>

{% endblock %}