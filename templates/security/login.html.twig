{% extends 'base.html.twig' %}

{% block title %}  Se connecte {% endblock %}


{% block body %}
	<div class="container text-center mt-4">
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey }}
            </div>
        {% endif %}
		<form method="post" action="{{ path('login') }}">
            <div class="form-group">
                <label for="username" class="form-label text-left" style="width:150px;">Nom d'utilisateur</label>
                <input type="text" name="_username" id="username" class="form-controle" value="{{last_username}}">
            </div>

            <div class="form-group">
                <label for="password" class="text-left" style="width:150px;">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-controle">
            </div>
            <button type = "submit" class="btn btn-primary">Se connecter</button>
        </form>
        
    </div>
{% endblock %}
